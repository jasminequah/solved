extends layout

block elements
  section#contact-area.section-small-border
  .container
    .row.d-flex.justify-content-center
      .menu-content.pb-60.col-lg-8
        .title.text-center
          h1.mb-10 Please enter your user details.
          | Already have an account? #{' '}
          a(href='/users/login') Login.
    form#myForm.form-area(action='/users/register', method='post')
      .col-lg-6.form-group.content-csers
        label User name
          input.common-input.mb-20.form-control(name='username', type='text', requiredplaceholder='Enter your username', onfocus="this.placeholder = ''", onblur="this.placeholder = 'Enter your name'")
        br
        label Password
          input.common-input.mb-20.form-control(name='password', type='password', required placeholder='Enter your password', onfocus="this.placeholder = ''", onblur="this.placeholder = 'Enter your password'")
        button.primary-btn.mt-20(type='submit')
          | Sign me up!
          span.lnr.lnr-arrow-right
        .alert-msg
